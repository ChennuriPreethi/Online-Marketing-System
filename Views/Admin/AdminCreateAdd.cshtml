@model Royal_Project_3.Models.product


@{
    ViewBag.Title = "Add Products";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="http://code.jquery.com/jquery.js"></script>
<div id="main-div">
    <div id="box" class="img-responsive">
        @using (Html.BeginForm("AdminCreateAdd", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="insidebox">
                <div><h1>Add Products</h1></div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                        @Html.DropDownListFor(x => x.pro_ad_id_fk, ViewBag.categorylist as SelectList, "--select--", new { @class = "form-control" })
                    </div>
                    <span style="color:red">@Html.ValidationMessageFor(x => x.pro_ad_id_fk)</span>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                        @Html.TextBoxFor(x => x.pro_name, new { @class = "form-control", @placeholder = "Product Name" })
                    </div>
                    <span style="color:red">@Html.ValidationMessageFor(x => x.pro_name)</span>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                        @Html.TextBoxFor(x => x.pro_price, new { @class = "form-control", @placeholder = "Price" })
                    </div>
                    <span style="color:red">@Html.ValidationMessageFor(x => x.pro_price)</span>
                </div>

                @*<div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                        @Html.TextBoxFor(x => x.pro_desc, new { @class = "form-control", @placeholder = "Description" })
                    </div>
                    <span style="color:red">@Html.ValidationMessageFor(x => x.pro_desc)</span>
                </div>*@

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                        <input type="file" name="imgfile" id="imgfile" class="form-control" required="required" />
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="ADD" class="btn btn-success btn-block" />
                </div>
                <div class="form-group">
                    <p style="color:red">@ViewBag.error</p>
                </div>
            </div>
        }
    </div>
</div>



@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}