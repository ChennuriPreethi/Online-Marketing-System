
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    <link rel="icon" href="~/Images/LOGO background.png" />
    <link href="~/Stylesheet/Main_SS.css" rel="stylesheet" />
    <link href="~/Stylesheet/Contact_SS.css" rel="stylesheet" />
    <link href="~/Stylesheet/Product_SS.css" rel="stylesheet" />
    <link href="~/Stylesheet/Footer_SS.css" rel="stylesheet" />
    <link href="~/Stylesheet/Checkout_SS.css" rel="stylesheet" />
    <link href="~/Stylesheet/UserRegistration_SS.css" rel="stylesheet" />
    <link href="~/Stylesheet/UserLogin_SS.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@600&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body >
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            
            <a href='@Url.Action("Index", "User" ,new { area = "AreaName" })'>
                    <img style="width:40%;" src="~/Images/LOGO background.png" />
                </a>
            </div>
            
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Index", "User")">
                            <span class="glyphicon glyphicon-home"></span>
                            Home
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("About", "User")">
                            <span class="glyphicon glyphicon-user"></span>
                            About
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Products", "User")">
                            <span class="glyphicon glyphicon-ice-lolly-tasted"></span>
                            Products
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Contact", "User")">
                            <span class="glyphicon glyphicon-earphone"></span>
                            Contact Us
                        </a>
                    </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        
                            @if (Session["u_id"] == null)
                            {
                                <li><a href="@Url.Action("Login", "User")"> Sign In</a></li>
                                //@Html.ActionLink("Sign In", "Login", "User", null, new { @class = "ht" })

                            }
                            else
                            {
                                <li><a>@Session["u_name"]</a></li>
                                <li><a href="@Url.Action("Signout", "User")"> Sign Out</a></li>
                                @*<a>@Session["u_name"]</a>
                                @Html.ActionLink("Sign Out", "Signout", "User", null, new { @class = "ht" })*@
                            }
                        
                        
                            @if (Session["u_id"] == null)
                            {
                                <li><a href="@Url.Action("Register", "User")"> Sign Up</a></li>
                               // @Html.ActionLink("Sign Up", "Register", "User", null, new { @class = "ht" })
                            }
                            
                        
                    </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="footer-style">
                <div class="row">
                    <div class="col-md-4">
                        <div class="boxes">
                            <h3>ADDRESS</h3>
                            <div class="footer-addr">
                                <p><a target="_blank" href="https://www.google.com/maps/dir/13.0688722,80.2209766/royal+ice+cream/13.0929398,80.0882071,12z/data=!3m1!4b1!4m9!4m8!1m1!4e1!1m5!1m1!1s0x3a5289d51eed72c9:0xbfefbd9887e78808!2m2!1d80.095601!2d13.1189106"><i class="fa fa-map-marker mr-3"></i> No. 56, 1st Street, Kamaraj Nagar, Avadi, Chennai-71</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="boxes">
                            <h3>SOCIAL MEDIA</h3>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="footer-soc1">
                                        <a href="https://www.facebook.com/100625095348190/posts/113359277408105/?sfnsn=wiwspwa" target=”_blank”><i class="fa fa-facebook-square"></i></a>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="footer-soc2">
                                        <a href="https://instagram.com/royal_icecreams?igshid=128gadrc8gx65" target=”_blank”><i class="fa fa-instagram"></i></a>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="footer-soc3">
                                        <a href="https://api.whatsapp.com/send?phone=+919043214570" class="whatsapp_float" target="_blank"><i class="fa fa-whatsapp "></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="boxes">
                            <h3>CONTACT US</h3>
                            <div class="footer-phn">
                                <p>
                                    <a href="tel:+91 9043214570"><i class="fa fa-phone mr-3"></i> +91 9043214570 |</a>
                                    <a href="tel:044-26551213">044-26551213</a>
                                </p>
                            </div> 
                            <div class="footer-mail">
                                <p><a href="mailto:info@royalicecreams.com"><i class="fa fa-envelope mr-3"></i> info@royalicecreams.com</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
