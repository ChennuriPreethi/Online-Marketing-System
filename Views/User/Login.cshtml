@model Royal_Project_3.Models.tbl_user
@{
    Layout = "~/Views/Shared/_LayoutNoFooterUser.cshtml";
    ViewBag.Title = "Login";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body class="bg-img1">
    @using (Html.BeginForm())
    {
        <form class="" action="" method="post">
            <div class="container-fluid text-white pad-top1">
                <div class="row">
                    <div class="col-lg-4">

                    </div>
                    <div class="col-lg-4 bg-danger">
                        <h1 class="text-center ">User Login</h1>
                        <table class="table">
                            <tr>
                                <td><label for="uname"><b>Username</b></label></td>
                                <td>
                                    @Html.TextBoxFor(x => x.u_email, new { @class = "form-control", @placeholder = "User Email" })

                                    <span style="color:red">@Html.ValidationMessageFor(x => x.u_email)</span>
                                </td>
                            </tr>
                            <tr>
                                <td><label for="psw"><b>Password</b></label></td>
                                <td>
                                    @Html.PasswordFor(x => x.u_password, new { @class = "form-control", @placeholder = "Password" })

                                    <span style="color:red">@Html.ValidationMessageFor(x => x.u_password)</span>
                                </td>
                            </tr>
                        </table>
                        <div class="form-group">
                            <p style="color:red">@ViewBag.error</p>
                        </div>
                        <input style="text-align:center;margin-left :10%;" type="submit" value="Login" class="btn btn-danger btn-block" />
                        <br />
                    </div>

                    <div class="col-lg-4">

                    </div>

                </div>
            </div>

        </form>
    }

</body>
</html>
